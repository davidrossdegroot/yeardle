<% content_for :title, "Yeardle - Guess the Year!" %>

<div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-6">
  <div class="text-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">🗓️ Yeardle</h1>
    <p class="text-gray-600">Guess when this event happened!</p>
    
    <% unless authenticated? %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3 mt-4">
        <p class="text-yellow-800 text-sm">
          👋 You're playing as a guest! 
          <%= link_to "Sign in", new_session_path, class: "text-yellow-900 underline" %> 
          to save your progress.
        </p>
      </div>
    <% end %>
  </div>

  <% if @current_game && !@current_game.completed? %>
    <div class="bg-blue-50 rounded-lg p-4 mb-6">
      <h2 class="text-xl font-semibold text-blue-800 mb-2">Current Event</h2>
      <p class="text-blue-700 font-medium"><%= @current_game.event.name %></p>
      <p class="text-blue-600 text-sm mt-1"><%= @current_game.event.description %></p>
      <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full mt-2">
        <%= @current_game.event.category %>
      </span>
    </div>

    <div class="mb-6">
      <h3 class="text-lg font-semibold text-gray-700 mb-3">Your Guesses</h3>
      <% if @current_game.guesses.any? %>
        <div class="space-y-2">
          <% @current_game.guesses.order(:created_at).each_with_index do |guess, index| %>
            <div class="flex items-center justify-between bg-gray-50 rounded-lg p-3">
              <span class="font-medium text-gray-800"><%= guess.year %></span>
              <div class="text-right">
                <span class="text-sm font-medium 
                  <%= 'text-green-600' if guess.correct? %>
                  <%= 'text-red-600' unless guess.correct? %>">
                  <%= guess.feedback %>
                </span>
                <% unless guess.correct? %>
                  <p class="text-xs text-gray-500">
                    Try <%= guess.direction == 'higher' ? 'higher' : 'lower' %>
                  </p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 italic">No guesses yet. Take a guess!</p>
      <% end %>
    </div>

    <div class="mb-4">
      <p class="text-sm text-gray-600 mb-2">
        Attempts remaining: <%= @current_game.attempts_remaining %>
      </p>
      
      <%= form_with url: guess_game_path(@current_game), method: :post, local: true, class: "space-y-4" do |f| %>
        <div>
          <label for="year" class="block text-sm font-medium text-gray-700 mb-1">
            What year did this happen?
          </label>
          <%= f.number_field :year, 
                min: 1000, 
                max: Date.current.year, 
                placeholder: "e.g., 1969", 
                required: true,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        
        <%= f.submit "Guess", 
              class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 font-medium" %>
      <% end %>
    </div>

  <% elsif @current_game && @current_game.completed? %>
    <div class="text-center mb-6">
      <% if @current_game.won? %>
        <div class="bg-green-50 rounded-lg p-4 mb-4">
          <h2 class="text-xl font-semibold text-green-800">🎉 Congratulations!</h2>
          <p class="text-green-700">You guessed correctly in <%= @current_game.guesses.count %> attempt<%= 's' unless @current_game.guesses.count == 1 %>!</p>
          <p class="text-green-600 text-sm mt-2">
            <strong><%= @current_game.event.name %></strong> happened in <strong><%= @current_game.event.year %></strong>
          </p>
        </div>
      <% else %>
        <div class="bg-red-50 rounded-lg p-4 mb-4">
          <h2 class="text-xl font-semibold text-red-800">😔 Game Over</h2>
          <p class="text-red-700">The correct answer was <strong><%= @current_game.event.year %></strong></p>
          <p class="text-red-600 text-sm mt-2">
            <strong><%= @current_game.event.name %></strong>
          </p>
        </div>
      <% end %>
      
      <%= link_to "Play Again", games_path(new_game: true), 
            class: "bg-blue-600 text-white py-2 px-6 rounded-md hover:bg-blue-700 inline-block font-medium" %>
    </div>
  <% end %>

  <% if @previous_games.any? %>
    <div class="border-t pt-6">
      <h3 class="text-lg font-semibold text-gray-700 mb-3">Recent Games</h3>
      <div class="space-y-2">
        <% @previous_games.each do |game| %>
          <div class="flex items-center justify-between bg-gray-50 rounded-lg p-3">
            <div>
              <p class="font-medium text-gray-800 text-sm"><%= game.event.name %></p>
              <p class="text-xs text-gray-500"><%= game.event.year %></p>
            </div>
            <div class="text-right">
              <span class="text-sm <%= game.won? ? 'text-green-600' : 'text-red-600' %>">
                <%= game.won? ? '✅' : '❌' %>
              </span>
              <p class="text-xs text-gray-500"><%= game.guesses.count %> guesses</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
